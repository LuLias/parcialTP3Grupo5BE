<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="155dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="7dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="1dp"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgDestinationItem"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/boracay" />

            <TextView
                android:id="@+id/txtDestinationItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Boracay"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgDestinationItem" />

            <TextView
                android:id="@+id/txtDestinationItemSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Philippines"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintStart_toStartOf="@+id/txtDestinationItemTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtDestinationItemTitle" />

            <TextView
                android:id="@+id/txtDestinationItemCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/destination_code_background"
                android:text="54DN"
                android:paddingHorizontal="5dp"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/dark_grey"
                app:layout_constraintTop_toBottomOf="@+id/imgDestinationItem" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
