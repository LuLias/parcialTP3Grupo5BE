<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ParcialTP3Grupo5BE" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        Theme.AppCompat.DayNight
        <!--  parent="Theme.Material3.DayNight.NoActionBar"  </item> -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.ParcialTP3Grupo5BE" parent="Base.Theme.ParcialTP3Grupo5BE" />


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.ResultsAppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextBottomNavActive" parent="Widget.Material3.BottomNavigationView" >
        <item name="color">@color/blue</item>
    </style>

    <style name="CustomSegmentedButton.Start" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">18dp</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
        <item name="strokeColor">#F3F5F9</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="CustomSegmentedButton.End" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">18dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="strokeColor">#F3F5F9</item>
        <item name="strokeWidth">3dp</item>
    </style>

</resources>